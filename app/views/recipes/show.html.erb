<article>
  <header>
    <h1><%= @recipe.name %></h1>
    <%= imagem(@recipe) %>
  </header>
  <h2>Ingredientes</h2>
  <p><%= @recipe.stuff %></p>
  <h2>Calorias</h2>
  <p><%= @recipe.calories %></p>
  <h3>Custo</h3>
  <p><%= @recipe.cost %></p>
  <h3>Modo de Preparo</h3>
  <p><%= @recipe.prepare_mode %></p>
  <h3>Tempo Preparo</h3>
  <p><%= @recipe.duration.to_formatted_s(:time) %> min</p>
  <h3>Porções</h3>
  <p><%= pluralize(@recipe.portion, 'porção', 'porções') %></p>


</article>

<%= link_to "Editar Receita" , edit_recipe_path(@recipe) %>
<%= link_to "Receitas" , recipes_path %>
<%= link_to "Excluir Receita" , recipe_path(@recipe), method: :delete, data: {confirm: "Deseja deletar esta receita?"} %>
