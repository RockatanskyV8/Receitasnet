<%= form_for(@recipe) do |f| %>

<p>
  <%= f.label :Nome %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :Ingredientes %><br />
  <%= f.text_field :stuff , cols: 20, rows: 5 %>
</p>
<p>
  <%= f.label :Calorias %><br />
  <%= f.number_field :calories %>
</p>
<p>
  <%= f.label :Modo_de_Preparo %><br />
  <%= f.text_area :prepare_mode , cols: 20, rows: 5  %>
</p>
<p>
  <%= f.label :Tempo_de_preparo %><br />
  <%= f.time_select :duration %>
</p>
<p>
  <%= f.label :Porções %><br />
  <%= f.text_field :portion %>
</p>
<p>
  <%= f.label :Custo %><br />
  <%= f.number_field :cost , cols: 20, rows: 5  %>
</p>
<p>
  <%= f.label :Poster %><br />
  <%= f.text_field :poster, placeholder:".GIF .JPEG ou .PNG" %>
</p>

<%= f.submit %>
<%= link_to 'Cancelar', recipes_url %>

<% end %>
