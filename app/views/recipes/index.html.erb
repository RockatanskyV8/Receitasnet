<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="pageheader"><%= pluralize(@recipes.size, "Receita", "Receitas") %>
        <small class="nova_receita"><%= link_to 'Nova Receita' , new_recipe_path %></small>
      </h1>
    </div>
  </div>

  <% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <%= link_to imagem(recipe) , recipe %>
    </div>
    <div class="col-md-7">
      <h3><%= link_to recipe.name , recipe %></h3>
      <td><%= truncate(recipe.stuff, length:15, separador:' ') %></td>
      <h4>Calorias</h4>
      <p><%= formata_caloria(recipe) %></p>
      <h4>Tempo de preparo</h4>
      <p><td><%= recipe.duration.to_formatted_s(:time) %> min</td></p>
      <h4>Custo:</h4>
      <td><%= number_to_currency(recipe.cost) %></td>
      </div>
    </div>
    <hr>
    <% end %>
  </div>
</div>
